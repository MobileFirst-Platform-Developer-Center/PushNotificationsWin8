<Page
    x:Class="PushNotifictionsWin8.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PushNotifictionsWin8"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FFFBFAFA">

        <Border x:Name="ConsolePanel" Background="#FFFBFAFA">
            <TextBlock x:Name="Console" HorizontalAlignment="Left" Margin="454,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="635" Width="865" Foreground="#FF383737" FontSize="20" FontFamily="Segoe WP"/>
        </Border>

        <Rectangle Fill="#FF3880C2" HorizontalAlignment="Left" Height="916" VerticalAlignment="Top" Width="397" Margin="0,0,0,-148"/>
        <TextBlock HorizontalAlignment="Left" Margin="0,2,0,0" TextWrapping="Wrap" Text="Push Notifications Win8" VerticalAlignment="Top" Height="47" Width="397" Foreground="White" TextAlignment="Center" FontSize="30" FontFamily="Segoe WP SemiLight"/>
        <TextBlock x:Name="UserName" HorizontalAlignment="Left" Margin="45,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="53" Width="304" Foreground="White" TextAlignment="Center" FontSize="30" FontFamily="Segoe WP SemiLight"/>

        <Button x:ConnectionId='1' Content="IS PUSH SUPPORTED" x:Name="IsPushSupported" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="42,100,0,0" FontSize="22" Background="#FF3880C2" Foreground="#FFF9FBFF" Height="70" Width="310" FontWeight="Normal" FontFamily="Segoe UI Semilight"                              />
        <Button x:ConnectionId='2' Content="REGISTER DEVICE" x:Name="RegisterDevice" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="42,180,0,0"  FontSize="22" Background="#FF3880C2" Foreground="#FFF9FBFF" Height="70" Width="310" FontWeight="Normal" FontFamily="Segoe UI Semilight"                             />
        <Button x:ConnectionId='3' Content="GET TAGS" x:Name="GetTags" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="42,260,0,0"  FontSize="22" Background="#FF3880C2" Foreground="#FFF9FBFF" Height="70" Width="310" FontWeight="Normal" FontFamily="Segoe UI Semilight"                      />
        <Button x:ConnectionId='4' Content="SUBSCRIBE" x:Name="Subscribe" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="42,340,0,0"  FontSize="22" Background="#FF3880C2" Foreground="#FFF9FBFF" Height="70" Width="310" FontWeight="Normal" FontFamily="Segoe UI Semilight"                        />
        <Button x:ConnectionId='5' Content="GET SUBSCRIPTIONS" x:Name="GetSubscriptions" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="42,420,0,0"  FontSize="22" Background="#FF3880C2" Foreground="#FFF9FBFF" Height="70" Width="310" FontWeight="Normal" FontFamily="Segoe UI Semilight"                               />
        <Button x:ConnectionId='6' Content="UNSUBSCRIBE" x:Name="Unsubscribe" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="42,500,0,0"  FontSize="22" Background="#FF3880C2" Foreground="#FFF9FBFF" Height="70" Width="310" FontWeight="Normal" FontFamily="Segoe UI Semilight"                          />
        <Button x:ConnectionId='7' Content="UNREGISTER DEVICE" x:Name="UnregisterDevice" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="42,580,0,0"  FontSize="22" Background="#FF3880C2" Foreground="#FFF9FBFF" Height="70" Width="310" FontWeight="Normal" FontFamily="Segoe UI Semilight"                               />
        <Button x:ConnectionId='8' Content="LOGOUT" x:Name="Logout" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="42,660,0,0"  FontSize="22" Background="#FF3880C2" Foreground="#FFF9FBFF" Height="70" Width="310" FontWeight="Normal" FontFamily="Segoe UI Semilight"                     />

        <TextBlock x:Name="ConsoleTab" HorizontalAlignment="Left" Margin="451,14,0,0" TextWrapping="Wrap" Text="Console" VerticalAlignment="Top" Height="35" Width="129" FontSize="27" FontFamily="Segoe UI Semilight" TextAlignment="Center" Foreground="DodgerBlue"/>

        <Grid Visibility="Visible" x:Name="LoginGrid" HorizontalAlignment="Left" Height="381" Margin="520,185,0,0" VerticalAlignment="Top" Width="738" Background="#FF3880C2">
            <TextBox HorizontalAlignment="Left" x:Name="username" FontSize="20"   Margin="65,175,403,0" Text="" VerticalAlignment="Top" Height="50" Width="270" PlaceholderText="Username" TextAlignment="Center"/>
            <TextBox HorizontalAlignment="Right" x:Name="password" FontSize="20"   Margin="0,175,61,0" Text="" VerticalAlignment="Top" Height="50" Width="270" PlaceholderText="Password" TextAlignment="Center"/>

            <Button x:ConnectionId='9' Name="OKButton" Content="OK" HorizontalAlignment="Left" Margin="64,289,0,0" VerticalAlignment="Top" Width="276" Height="50" FontSize="20"                       />
            <Button x:ConnectionId='10' Name="CancelButton"                            Content="Cancel" HorizontalAlignment="Left" Margin="402,289,0,0" VerticalAlignment="Top" Width="276" Height="50" FontSize="20"/>
            <Rectangle Fill="#FF225583" HorizontalAlignment="Left" Height="86" VerticalAlignment="Top" Width="738"/>
            <TextBlock Name="HintText" HorizontalAlignment="Left" Margin="105,4,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="86" Width="520" FontSize="30" TextAlignment="Center" FontFamily="Segoe UI Semilight"/>
            <CheckBox x:Name="RememberMe" Content="RememberMe" FontSize="20" HorizontalAlignment="Left" Margin="277,241,0,0" VerticalAlignment="Top"/>
        </Grid>

    </Grid>
</Page>

